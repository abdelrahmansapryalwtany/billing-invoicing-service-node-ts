{
  "name": "billing-invoicing-mini-service-node-ts",
  "version": "1.0.0",
  "private": true,
  "description": "Production-ish Billing/Invoicing mini-service (Node.js + TypeScript + Express + PostgreSQL + Prisma + pg-boss)",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "lint": "eslint .",
    "postinstall": "prisma generate",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "test": "jest --runInBand"
  },
  "dependencies": {
    "@prisma/client": "^6.4.1",
    "decimal.js": "^10.5.0",
    "express": "^4.19.2",
    "pdfkit": "^0.15.0",
    "pg": "^8.12.0",
    "pg-boss": "^10.1.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@testcontainers/postgresql": "^10.16.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.30",
    "@types/pdfkit": "^0.13.6",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/supertest": "^2.0.16",
    "eslint": "^9.18.0",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "prisma": "^6.4.1",
    "supertest": "^6.3.4",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.21.0"
  }
}

